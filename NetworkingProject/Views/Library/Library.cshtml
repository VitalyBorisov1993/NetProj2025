@model IEnumerable<NetworkingProject.Models.LibraryModel>

@{
    ViewData["Title"] = "My Library";
}

<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Bundle with Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="container my-5">
    <h1 class="text-center mb-4 fw-bold">My Library</h1>
    <div class="row g-4">
        @foreach (var book in Model)
        {
            <div class="col-md-3 d-flex justify-content-center">
                <div class="card border-0 shadow-sm" style="width: 250px;">
                    <div class="card-body text-center">
                        <h5 class="fw-bold mb-2">@book.Title</h5>
                        <p class="text-muted mb-1">by @book.Author</p>
                        <p class="mb-1"><strong>Publisher:</strong> @book.Publisher</p>
                        <p class="mb-1"><strong>Genre:</strong> @book.Genre</p>
                        <p class="mb-1"><strong>Age Limit:</strong> @book.AgeLim+</p>
                        <p class="mb-2">
                            <strong>Status:</strong>
                            @if (book.Borrowed)
                            {
                                <span class="text-danger">Borrowed</span>
                            }
                            else
                            {
                                <span class="text-success">Available</span>
                            }
                        </p>
                        <div class="d-flex flex-column gap-2">
                            @if (!book.Borrowed)
                            {
                                <a href="@Url.Action("BorrowBook", "Library", new { title = book.Title })"
                                   class="btn btn-primary btn-sm px-4 fw-bold">
                                    Borrow
                                </a>
                            }
                            @if (ViewBag.IsAdmin)
                            {
                                <a href="@Url.Action("DeleteBook", "Library", new { title = book.Title })"
                                   class="btn btn-danger btn-sm px-4 fw-bold"
                                   onclick="return confirm('Are you sure you want to delete this book?');">
                                    Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
