@model IEnumerable<NetworkingProject.Models.BookModel>

<!DOCTYPE html>
<html>
<head>
    <title>Shopping Cart</title>
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center mb-4 fw-bold">Your Shopping Cart</h1>

        @if (!Model.Any())
        {
            <p class="text-center">Your cart is empty.</p>
        }
        else
        {
            <!-- Display books in the cart -->
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.Price.ToString("0.00")$</td>
                            <td>
                                <a href="@Url.Action("RemoveFromCart", "ShoppingCart", new { id = book.Title })" class="btn btn-danger btn-sm">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-end">
                <a href="@Url.Action("Checkout", "ShoppingCart")" class="btn btn-success">Checkout</a>
            </div>
        }
    </div>
</body>
</html>
